            <Label x:Name="_label" Text="You swiped: "/>-->
            <Button Text="Submit Results"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                Clicked="SubmitResults" />
            <Label Text="{Binding MyStringProperty}"/>

        </StackLayout>
    </ScrollView>
</ContentPage>